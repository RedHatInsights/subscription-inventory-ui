{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
  ],
  "tekton": {
    "enabled": true
  },
  "npm": {
    "enabled": true,
    "schedule": ["* * * * 0,6"]
  },
  "packageRules": [
    {
      "matchManagers": ["tekton", "npm"],
      "automerge": true
    }
  ]
}
